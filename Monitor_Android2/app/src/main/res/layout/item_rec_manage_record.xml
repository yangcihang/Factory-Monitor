<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="@dimen/padding_left_right"
    android:layout_marginRight="@dimen/padding_left_right">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_normal_rect"
        android:orientation="vertical"
        android:padding="@dimen/padding_left_right">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_record_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="炼钢"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/title_text"/>

            <TextView
                android:id="@+id/txt_record_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end|center"
                android:text="123123"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/secondary_text"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/padding_left_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总数："
                android:textSize="@dimen/primary_text"/>

            <TextView
                android:id="@+id/txt_record_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="@dimen/primary_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/padding_height_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合格数："
                android:textSize="@dimen/primary_text"/>

            <TextView
                android:id="@+id/txt_record_qualified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="90"
                android:textSize="@dimen/primary_text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_height_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间："
                android:textSize="@dimen/primary_text"/>

            <TextView
                android:id="@+id/txt_record_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="08/11 10:10"
                android:textSize="@dimen/primary_text"/>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
