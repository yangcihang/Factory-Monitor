<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="400dp"
              android:layout_height="40dp"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_procedure_detail_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/secondary_text"/>

    <TextView
        android:id="@+id/txt_procedure_detail_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/secondary_text"/>

    <TextView
        android:id="@+id/txt_procedure_detail_success_percent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/secondary_text"/>

    <TextView
        android:id="@+id/txt_procedure_detail_success_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/secondary_text"/>

    <TextView
        android:id="@+id/txt_procedure_detail_no_success_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/secondary_text"/>

    <TextView
        android:id="@+id/txt_procedure_detail_record_people"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/secondary_text"/>


</LinearLayout>