<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/padding_left_right">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingTop="@dimen/padding_left_right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前工序："
            android:textColor="@color/primary_text"
            android:textSize="@dimen/title_text"/>

        <TextView
            android:id="@+id/txt_record_current"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/title_text"
            tools:text="炼铁（B-123）"/>

        <Button
            android:id="@+id/btn_record_select"
            android:layout_width="64dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_normal_corner"
            android:padding="4dp"
            android:text="选择工序"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_left_right">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="完成数："
            android:textColor="@color/primary_text"
            android:textSize="@dimen/title_text"/>

        <EditText
            android:id="@+id/edit_record_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_normal_rect"
            android:gravity="center"
            android:hint="输入完成总数"
            android:inputType="number"
            android:maxLength="10"
            android:maxLines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_left_right">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="合格品："
            android:textColor="@color/primary_text"
            android:textSize="@dimen/title_text"/>

        <EditText
            android:id="@+id/edit_record_qualified"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_normal_rect"
            android:gravity="center"
            android:hint="输入合格数"
            android:inputType="number"
            android:maxLength="10"
            android:maxLines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_left_right">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="合格率："
            android:textColor="@color/primary_text"
            android:textSize="@dimen/title_text"/>

        <TextView
            android:id="@+id/txt_record_percent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="%"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_record_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前时间："
            android:textColor="@color/primary_text"
            android:textSize="@dimen/primary_text"/>

        <TextView
            android:id="@+id/txt_record_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="08/11 11:26"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/primary_text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工人:"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/primary_text"
            />

        <TextView
            android:id="@+id/txt_record_workers_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/primary_text"/>

        <TextView
            android:id="@+id/txt_record_workers_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="查看"
            android:textColor="@color/accent"
            android:textSize="@dimen/secondary_text"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_record_delete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        android:layout_marginTop="80dp"
        android:background="@drawable/bg_normal_corner"
        android:text="@string/text_delete"
        android:textColor="@color/red_warning"
        android:textSize="@dimen/title_text"/>

    <Button
        android:id="@+id/btn_record_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_normal_corner"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="@dimen/title_text"/>
</LinearLayout>